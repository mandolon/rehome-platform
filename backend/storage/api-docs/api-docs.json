{
    "openapi": "3.0.0",
    "info": {
        "title": "Requests API",
        "description": "API for managing requests",
        "version": "1.0.0"
    },
    "paths": {
        "/api/requests": {
            "get": {
                "tags": [
                    "Requests"
                ],
                "summary": "Get all requests",
                "description": "Display a listing of the resource.",
                "operationId": "d9786ff19c5d7c51597cf7850f972d8b",
                "parameters": [
                    {
                        "name": "mine",
                        "in": "query",
                        "description": "Filter by requests created by current user",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "assigned",
                        "in": "query",
                        "description": "Filter by requests assigned to current user",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter by request status",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "open",
                                "in_progress",
                                "blocked",
                                "resolved",
                                "closed"
                            ]
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search by title or body",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort field",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "created_at",
                                "status",
                                "title"
                            ]
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Sort order",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Request"
                                            }
                                        },
                                        "current_page": {
                                            "type": "integer"
                                        },
                                        "per_page": {
                                            "type": "integer"
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "last_page": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Request": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Fix login issue"
                    },
                    "body": {
                        "type": "string",
                        "example": "Users cannot log in with valid credentials"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "open",
                            "in_progress",
                            "blocked",
                            "resolved",
                            "closed"
                        ],
                        "example": "open"
                    },
                    "creator_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "assignee_id": {
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "creator": {
                        "$ref": "#/components/schemas/User"
                    },
                    "assignee": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/User"
                            }
                        ],
                        "nullable": true,
                        "type": "object"
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RequestParticipant"
                        }
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@example.com"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "admin",
                            "manager",
                            "contributor",
                            "viewer"
                        ],
                        "example": "contributor"
                    }
                },
                "type": "object"
            },
            "RequestParticipant": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "request_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "viewer",
                            "contributor",
                            "manager"
                        ],
                        "example": "contributor"
                    },
                    "user": {
                        "$ref": "#/components/schemas/User"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Requests",
            "description": "Requests"
        }
    ]
}